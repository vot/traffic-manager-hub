<div class="container" style="max-width:800px">

  <div class="panel panel-danger">
    <div class="panel-heading">
     <h3 class="panel-title">{{#if title}}{{title}}{{else}}Error{{/if}}</h3>
   </div>
    <div class="panel-body">
      <p>{{error}}</p>
      <br />
      {{#if returnLink}}
      <p>
        <a class="btn btn-danger" href="{{returnLink}}">Go back</a>
      </p>
      {{/if}}
    </div>
  </div>

</div>
