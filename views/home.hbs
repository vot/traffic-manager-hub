<h1>Traffic Manager overview</h1>

{{#each data.sites}}

  <h2>
    <a href="/site/{{this.id}}/summary">
      Site name: {{this.name}}
    </a>
  </h2>

  <div class="row">
    <div class="col-sm-4">
      <div class="tm-statistic red">
        <p class="heading">Requests</p>
        <p class="score">45000</p>
        <p class="avg">Frame avg: 3000/min</p>
        <p class="avg">24h avg: 4300/min</p>
      </div>
    </div>


    <div class="col-sm-4">
      <div class="tm-statistic green">
        <p class="heading">Blocked requests</p>
        <p class="score">180</p>
        <p class="avg">Frame avg: 12/min</p>
        <p class="avg">24h avg: 6/min</p>
      </div>
    </div>


    <div class="col-sm-4">
      <div class="tm-statistic yellow">
        <p class="heading">IP Hops</p>
        <p class="score">150</p>
        <p class="avg">Frame avg: 10/min</p>
        <p class="avg">24h avg: 6/min</p>
      </div>
    </div>

  </div>

{{/each}}
